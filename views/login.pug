extends layout

block content
  script(src="/javascripts/login.js") 
  h1= title
  p Login
  #divLogin
    form(autocomplete='on')
      label(for='email')
        p Email
      input(type='email' placeholder='Enter Email' name='email' id="tBoxLoginEmail" autocomplete='email' required)
      label(for='current-password')
        p Password
      input(type='password' placeholder='Enter Password' name='current-password' id="tBoxLoginPassword" autocomplete='current-password' required)
      button(type='button' onclick='functionLogin()') Login

      br
      br

      button(type='button' onclick='functionShowCreateAccount()') Create account

  #divCreateAccount(style="display:none;")
    form(method='dialog' autocomplete='on')
      h2 Sign Up
      hr
      label(for='name')
        p Full Name
      input(type='text' placeholder='Enter Full Name' name='name' id="tBoxFullName" autocomplete='name' required)
      label(for='email')
        p Email
      input(type='email' placeholder='Enter Email' name='email' id="tBoxCreateEmail" autocomplete='email' required)
      label(for='new-password')
        p Password
      input(type='password' placeholder='Enter Password' name='password' id="tBoxCreatePassword" autocomplete='new-password' required title='Password must be at least 6 characters which contain at least one number, one uppercase and one lowercase letter')
      label(for='repeat-password')
        p Repeat Password
      input(type='password' placeholder='Repeat Password' name='repeat-password' id="tBoxRepeatPassword" autocomplete='new-password' required)
      p#errorMessage
      br
      br
      button(type='button' onclick='functionCancelCreateAccount()') Cancel
      button(type='submit' onclick='functionCreateAccount()') Create Account